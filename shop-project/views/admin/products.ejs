<div class="d-flex align-items-center justify-content-center">
    <% products.forEach(item => { %>
    <div class="card mx-4" style="width:400px">
        <h4 class="card-title text-center"><%-item.title%></h4>
        <img class="card-img-top" src="<%-item.imageUrl%>" alt="Card image" style="width:100%">
        <div class="card-body">
            <h3 class="text-center">$<%-item.price%></h3>
            <p class="card-text text-center"><%-item.description%></p>
            <div class="text-center">
                <a href="/admin/product-form/<%- item._id %>" class="btn btn-outline-primary">Edit</a>
                <a href="/admin/delete/<%- item._id %>" class="btn btn-outline-primary">Delete</a>
            </div>
        </div>
    </div>
    <% }) %>
</div>