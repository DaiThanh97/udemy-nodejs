<% 
    let xhtml = '';
    items.forEach(item => {
        let product = item.productId;
        xhtml += `<div class="card-body d-flex justify-content-between">
                        <h4>${product.title}</h4>
                        <h4>Quantity: ${item.quantity}</h4>
                    </div>`;
    });
%>

<div class="row">
    <div class="col-12">
        <div class="card">
            <%- xhtml %>
        </div>
        <div class="text-center">
            <h2>Total: <%- total %> </h2>
        </div>
        <div>
            <button id='order-btn' class="btn btn-outline-info">ORDER</button>
            <script>
                var stripe = Stripe("pk_test_51HuDY7JpuJ6brZ9OmGkwXWWKItWOmIdLCDj8BYMbVCyYsFW0WU36H7aZzVmFvEe9RO2jvfVvrIqTWAjkHvmcvtW400IPPaqbJN");
                var orderButton = document.getElementById('order-btn');

                orderButton.addEventListener("click", function () {
                    stripe.redirectToCheckout({
                        sessionId: '<%- sessionId %>'
                    });
                });
            </script>
        </div>
    </div>
</div>